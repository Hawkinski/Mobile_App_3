<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="4dp"
    android:layout_margin="5dp"

    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/r_layout"

        android:background="?attr/selectableItemBackground"
      >

    <TableLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:background="@color/btn"
        android:layout_height="wrap_content">


        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.6"
                android:paddingBottom="5dp"
                android:paddingEnd="1dp"
                android:paddingLeft="5dp"
                android:paddingRight="1dp"
                android:paddingStart="5dp"
                android:paddingTop="5dp"

                android:text="Task #:"

                android:textColor="#FFF"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/task_no"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2.8"
                android:ems="8"
                android:paddingBottom="5dp"
                android:paddingEnd="16dp"
                android:paddingLeft="1dp"
                android:paddingRight="5dp"

                android:paddingStart="1dp"
                android:paddingTop="5dp"
                android:text="0000000128"
                android:textStyle="bold"
                android:textColor="#FFF"
                android:textSize="15dp" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/divider_color" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:paddingBottom="5dp"
                android:paddingEnd="0dp"
                android:paddingLeft="5dp"
                android:paddingRight="0dp"
                android:paddingStart="5dp"
                android:paddingTop="5dp"


                android:text="Call #:"
                android:textColor="#FFF"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/call_no"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:paddingBottom="5dp"
                android:paddingEnd="5dp"
                android:paddingLeft="0dp"
                android:paddingRight="5dp"
                android:paddingStart="0dp"
                android:paddingTop="5dp"
                android:textStyle="bold"
                android:text="MD00000065"
                android:textColor="#FFF"
                android:textSize="15dp" />
        </TableRow>



    </TableLayout>


   <LinearLayout
       android:layout_width="match_parent"
       android:orientation="vertical"
       android:layout_below="@+id/layout"
       android:layout_height="wrap_content">

       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:padding="5dp"
        >

           <ImageView
               android:id="@+id/img1"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_centerVertical="true"
               android:layout_marginEnd="5dp"
               android:layout_marginRight="5dp"
               android:src="@drawable/ic_geo_fence_96_1" />

           <TableLayout
               android:layout_width="match_parent"
               android:id="@+id/table1"
               android:layout_marginLeft="5dp"
               android:layout_marginStart="30dp"

               android:layout_height="wrap_content">
               <TableRow
                   android:paddingEnd="16dp"
                   android:paddingLeft="10dp"
                   android:paddingRight="16dp"
                   android:paddingStart="10dp"
                   android:paddingTop="5dp">

                   <TextView
                       android:id="@+id/txt1"
                       android:layout_width="0dp"
                       android:layout_height="wrap_content"
                       android:layout_marginLeft="5dp"
                       android:layout_marginStart="5dp"
                       android:layout_weight="1"
                       android:textStyle="bold"

                       android:text="Location"
                       android:textAppearance="@style/TextAppearance.AppCompat.Title"
                       android:textColor="#212121"
                       android:textSize="15sp" />

                   <TextView
                       android:layout_width="0dp"
                       android:layout_height="wrap_content"
                       android:layout_weight="1.2"

                       android:maxLines="1"
                       android:ellipsize="end"
                       android:id="@+id/location"
                       android:text="Home"
                       android:textColor="@color/secondary_text"
                       android:textSize="15dp"
                       android:textAppearance="@style/TextAppearance.AppCompat.Small"
                       />

               </TableRow>

           </TableLayout>


           <View
               android:layout_width="wrap_content"
               android:background="#B6B6B6"
               android:layout_marginTop="5dp"

               android:layout_marginLeft="5dp"
               android:layout_marginStart="5dp"

               android:layout_height="1dp"
               android:layout_below="@+id/table1"
               android:layout_toRightOf="@+id/img1"
               android:layout_toEndOf="@+id/img1" />


       </RelativeLayout>

       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:padding="5dp">

           <ImageView
               android:id="@+id/img2"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_centerVertical="true"
               android:layout_marginEnd="5dp"
               android:layout_marginRight="5dp"
               android:src="@drawable/ic_questions_96" />


           <TableLayout
               android:layout_width="match_parent"
               android:id="@+id/table2"
               android:layout_marginLeft="5dp"
               android:layout_marginStart="30dp"

               android:layout_height="wrap_content">
               <TableRow
                   android:paddingEnd="16dp"
                   android:paddingLeft="10dp"
                   android:paddingRight="16dp"
                   android:paddingStart="10dp"
                   android:paddingTop="5dp">

                   <TextView
                       android:id="@+id/txt2"
                       android:layout_width="0dp"
                       android:layout_height="wrap_content"
                       android:layout_marginLeft="5dp"
                       android:layout_marginStart="5dp"
                       android:text="Complaint"
                       android:textSize="15sp"
                       android:layout_weight="1"
                       android:textStyle="bold"

                       android:textAppearance="@style/TextAppearance.AppCompat.Title"
                       android:textColor="#212121" />
                   <TextView
                       android:id="@+id/description"
                       android:layout_width="0dp"
                       android:layout_height="wrap_content"
                       android:text="Home"
                       android:layout_weight="1.2"
                       android:ellipsize="end"
                       android:maxLines="2"
                       android:textColor="@color/secondary_text"
                       android:textSize="15dp"
                       android:textAppearance="@style/TextAppearance.AppCompat.Small"
                       />

               </TableRow>

           </TableLayout>


           <View
               android:layout_width="wrap_content"
               android:layout_height="1dp"
               android:layout_below="@+id/table2"

               android:layout_marginLeft="5dp"
               android:layout_marginStart="5dp"

               android:layout_marginTop="5dp"
               android:layout_toEndOf="@+id/img2"
               android:layout_toRightOf="@+id/img2"
               android:background="#B6B6B6" />


       </RelativeLayout>

       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:padding="5dp">

           <ImageView
               android:id="@+id/img3"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_centerVertical="true"
               android:layout_marginEnd="5dp"
               android:layout_marginRight="5dp"
               android:src="@drawable/ic_high_priority_96" />


           <TableLayout
               android:layout_width="match_parent"
               android:id="@+id/table3"
               android:layout_marginLeft="5dp"
               android:layout_marginStart="30dp"

               android:layout_height="wrap_content">
               <TableRow
                   android:paddingEnd="16dp"
                   android:paddingLeft="10dp"
                   android:paddingRight="16dp"
                   android:paddingStart="10dp"
                   android:paddingTop="5dp">

                   <TextView
                       android:layout_width="0dp"
                       android:layout_height="wrap_content"
                       android:layout_weight="1"
                       android:textStyle="bold"

                       android:id="@+id/txt3"
                       android:layout_marginLeft="5dp"
                       android:layout_marginStart="5dp"
                       android:text="Priority"
                       android:textSize="15sp"
                       android:textAppearance="@style/TextAppearance.AppCompat.Title"
                       android:textColor="#212121" />
                   <TextView
                       android:layout_width="0dp"
                       android:layout_height="wrap_content"
                       android:text="Home"
                       android:layout_weight="1.2"
                       android:ellipsize="end"
                       android:textSize="15dp"
                       android:id="@+id/priority"
                       android:maxLines="1"
                       android:textColor="@color/secondary_text"
                       android:textAppearance="@style/TextAppearance.AppCompat.Small"

                        />


               </TableRow>

           </TableLayout>

           <View
               android:layout_width="wrap_content"
               android:background="#B6B6B6"
               android:layout_marginTop="5dp"

               android:layout_marginLeft="5dp"
               android:layout_marginStart="5dp"

               android:layout_height="1dp"
               android:layout_below="@+id/table3"
               android:layout_toRightOf="@+id/img3"
               android:layout_toEndOf="@+id/img3" />


       </RelativeLayout>

